<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:background="#2a86e2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                class="com.google.android.gms.maps.MapFragment"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/imageCategory"
                android:src="@drawable/ic_cast_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
<!--
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="MY SPOTS"
                android:onClick="goToSaveSpots"
                android:layout_gravity="center" />
-->
        </RelativeLayout>
        <RelativeLayout
            android:background="#c96b0d"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/spot_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="SPOT DESCRIPTION"/>
            <EditText
                android:id="@+id/edit_spot_name"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/spot_description"
                android:layout_centerHorizontal="true"
                android:inputType="textShortMessage"
                android:hint="Description"
                android:layout_marginBottom="20dp"
                android:textColorHint="#BBBBBB"/>
            <LinearLayout
                android:background="#1bbf2c"
                android:id="@+id/list_category"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/edit_spot_name"
                android:orientation="horizontal"
                android:weightSum="5"
                android:divider="#6cbccc"
                android:dividerHeight="1dp" >
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cat1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CAT1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cat2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CAT2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cat3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CAT3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cat4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="CAT4"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/catmore"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="More"/>
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ADD SPOT"
                android:onClick="addTestSpots"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
    </LinearLayout>





</RelativeLayout>
