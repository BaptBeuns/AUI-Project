<com.spots.BottomToolbar android:id="@+id/bottom_toolbar"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:contentInsetStart="0dp"
    android:contentInsetLeft="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:background="@color/main_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:weightSum="2"
            android:padding="0dp">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/go_to_add_activity_button"
                android:textAlignment="center"
                android:background="@color/main_color"
                android:textColor="@drawable/button_text_selector"
                android:text="@string/add_activity_name"
                android:layout_margin="0dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/go_to_saved_spots_activity_button"
                android:textAlignment="center"
                android:background="@color/main_color"
                android:textColor="@drawable/button_text_selector"
                android:text="@string/saved_places_activity_name"/>
            <!--
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/go_to_explore_activity_button"
                android:textAlignment="center"
                android:background="@color/main_color"
                android:textColor="@drawable/button_text_selector"
                android:text="@string/explore_activity_name"/>
-->
        </LinearLayout>

</com.spots.BottomToolbar>
